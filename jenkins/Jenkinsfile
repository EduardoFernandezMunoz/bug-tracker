pipeline {
    agent any

    tools {
        go 'Go'                // Nombre exacto de Go en Jenkins Global Tool Config
        nodejs 'NodeJS_LTS'    // Nombre exacto de NodeJS en Jenkins Global Tool Config
    }

        stage('Execute Unit Tests') {
            parallel {

                stage('Unit Tests - Backend') {
                    steps {
                        dir('bugtracker-backend') {
                            bat 'go version'

                            // Ejecutar tests y generar cobertura
                            bat 'go test -v ./... > test-results.txt'
                            bat 'go test -coverprofile=coverage.out -covermode=atomic ./...'
                            bat 'go tool cover -html=coverage.out -o coverage.html'

                            // Crear carpeta de reports y mover coverage
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage.html reports\\'

                            // Convertir test-results.txt a JUnit XML
                            bat 'go-junit-report < test-results.txt > test-results.xml'
                        }
                    }
                    post {
                        always {
                            junit 'bugtracker-backend/test-results.xml'
                            publishHTML([
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: false
                            ])
                        }
                    }
                }

                stage('Unit Tests - Frontend') {
                    steps {
                        dir('bugtracker-frontend') {
                            bat 'node -v'
                            bat 'npm -v'

                            // Instalar dependencias y ejecutar tests
                            bat 'npm ci'
                            bat 'npm test'

                            // Crear carpeta de reports y mover coverage
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage reports\\'
                        }
                    }
                    post {
                        always {
                            junit 'bugtracker-frontend/reports/junit.xml'
                            publishHTML([
                                reportDir: 'bugtracker-frontend/reports',
                                reportFiles: 'index.html',
                                reportName: 'Frontend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: false
                            ])
                        }
                    }
                }

            } // end parallel
        }

        stage('Launch Applications') {
            steps {
                echo "Launching backend and frontend apps..."
                // Ejecutar backend
                bat "start cmd /c \"cd bugtracker-backend && npm start -- --port %BACKEND_PORT%\""
                // Ejecutar frontend
                bat "start cmd /c \"cd bugtracker-frontend && npm start -- --port %FRONTEND_PORT%\""
            }
        }

    } // end stages

    post {
        always {
            cleanWs()
        }
    }
}
