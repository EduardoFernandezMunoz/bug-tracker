pipeline {
    agent any
    tools {
        go 'Go'           
        nodejs 'NodeJS_LTS'
    }

    stages {
        stage('Execute Unit Tests') {
            parallel {

                stage('Unit Tests - Backend') {
                    steps {
                        dir('bugtracker-backend') {
                            // Verificar que Go está disponible
                            bat 'go version'

                            // Crear carpeta reports si no existe
                            bat 'if not exist reports mkdir reports'

                            // Ejecutar tests y generar coverage
                            catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                                bat 'go test -coverprofile=coverage.out -covermode=atomic ./...'
                                // Solo generar HTML si coverage.out existe
                                bat '''
                                if exist coverage.out (
                                    go tool cover -html=coverage.out -o reports\\coverage.html
                                ) else (
                                    echo "coverage.out no existe, omitiendo HTML"
                                )
                                '''
                                // Crear JUnit XML de backend
                                bat '''
                                go test -v ./... -json > test-results.json
                                echo "Converting JSON to JUnit XML requires go-junit-report tool"
                                '''
                            }
                        }
                    }
                    post {
                        always {
                            // Publicar HTML
                            publishHTML([
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: true
                            ])
                            // Aquí se podría usar publishJUnit si se tiene JUnit XML generado
                        }
                    }
                }

                stage('Unit Tests - Frontend') {
                    steps {
                        dir('bugtracker-frontend') {
                            bat 'node -v'
                            bat 'npm -v'

                            // Instalar dependencias
                            bat 'npm ci'

                            // Ejecutar tests con cobertura y JUnit reporter
                            bat 'npm test'

                            // Crear carpeta reports si no existe
                            bat 'if not exist reports mkdir reports'

                            // Mover cobertura HTML
                            bat 'move /Y coverage reports\\'
                        }
                    }
                    post {
                        always {
                            publishHTML([
                                reportDir: 'bugtracker-frontend/reports',
                                reportFiles: 'coverage/index.html',
                                reportName: 'Frontend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: true
                            ])
                        }
                    }
                }

            }
        }

        stage('Launch Application') {
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    dir('.') {
                        bat 'docker-compose up -d'
                        bat 'docker ps'
                    }
                }
            }
            // Explicación: Lanza contenedores backend y frontend con Docker en Windows.
        }

    }

    post {
        always {
            cleanWs()
        }
    }
}
