pipeline {
    agent any

    tools {
        go 'Go'
        nodejs 'NodeJS_LTS'
    }

    stages {
        stage('Unit Tests - Backend') {
            steps {
                dir('bugtracker-backend') {
                    // Print Go version
                    bat 'go version'
                    // Run tests and generate junit XML
                    bat '''
                        go test ./... -v > tmp.txt
                        go-junit-report < tmp.txt > test-results.xml
                    '''
                }
            }
            post {
                always {
                    // Publish the junit results
                    junit 'bugtracker-backend/test-results.xml'
                }
            }
        }

        stage('Unit Tests - Frontend') {
            steps {
                dir('bugtracker-frontend') {
                    bat 'node -v'
                    bat 'npm ci'
                    bat 'npm test'
                }
            }
            post {
                always {
                    junit 'bugtracker-frontend/test-results.xml'
                }
            }
        }
    }
}

