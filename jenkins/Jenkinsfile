pipeline {
    agent any

    environment {
        // Keep Node in PATH (assuming installed globally)
        PATH = "${tool 'NodeJS-25'}\\bin;${env.PATH}"  
    }

    stages {
        stage('Checkout SCM') {
            steps {
                // Checkout the repository
                checkout scm
            }
        }

        stage('Tool Install') {
            steps {
                echo 'Checking Go and Node versions...'
                // Temporarily add Go to PATH so Jenkins finds it
                withEnv(["PATH=C:\\Go\\bin;${env.PATH}"]) {
                    bat 'go version'
                }
                bat 'node -v'
            }
        }

        stage('Execute Unit Tests') {
            parallel {
                stage('Unit Tests - Backend') {
                    steps {
                        dir('bugtracker-backend') {
                            echo 'Running backend unit tests...'
                            withEnv(["PATH=C:\\Go\\bin;${env.PATH}"]) {
                                bat 'go test ./... -v -coverprofile=reports/coverage.out'
                            }
                        }
                    }
                }
                stage('Unit Tests - Frontend') {
                    steps {
                        dir('bugtracker-frontend') {
                            echo 'Running frontend unit tests...'
                            bat 'npm ci'
                            bat 'npm test'
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage reports\\'
                        }
                    }
                }
            }
        }

        stage('Publish Coverage Reports') {
            steps {
                // Backend coverage
                publishHTML([
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'bugtracker-backend/reports',
                    reportFiles: 'index.html',
                    reportName: 'Backend Coverage Report'
                ])
                // Frontend coverage
                publishHTML([
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'bugtracker-frontend/reports',
                    reportFiles: 'index.html',
                    reportName: 'Frontend Coverage Report'
                ])
            }
        }

        stage('Launch Application') {
            steps {
                echo 'Skipping launch stage in CI...'
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            cleanWs()
        }
    }
}
