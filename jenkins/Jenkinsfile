pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    // Official Go image
                    image 'golang:1.21'
                    // Keep Jenkins workspace inside the container
                    reuseNode true
                }
            }
            steps {
                // Change to the backend directory
                dir('bugtracker-backend') {
                    // Run tests inside the container
                    sh 'go test -v ./...'
                }
            }
        }
    }
}
