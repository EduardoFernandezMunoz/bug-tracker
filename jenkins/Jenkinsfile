pipeline {
    agent any
    tools {
        go 'Go'
        nodejs 'NodeJS_LTS'
    }

    environment {
        BACKEND_PORT = "8081"
        FRONTEND_PORT = "3000"
    }

    stages {

        stage('Execute Unit Tests') {
            parallel {

                stage('Unit Tests - Backend') {
                    steps {
                        dir('bugtracker-backend') {
                            echo "Checking Go version..."
                            bat 'go version'

                            // Create reports folder if it doesn't exist
                            bat 'if not exist reports mkdir reports'

                            // Ensure no process is occupying BACKEND_PORT
                            echo "Freeing port ${env.BACKEND_PORT} if occupied..."
                            bat """
                            for /f "tokens=5" %%a in ('netstat -ano ^| findstr :${env.BACKEND_PORT} ^| findstr LISTENING') do (
                                echo Port ${env.BACKEND_PORT} occupied by PID %%a, killing process...
                                taskkill /PID %%a /F
                            )
                            """

                            // Run tests with coverage safely
                            catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                                // Recommend using a dynamic port in tests to avoid conflicts:
                                // e.g., TEST_PORT=:0 in Go test environment
                                bat 'set TEST_PORT=:0 && go test -coverprofile=coverage.out -covermode=atomic ./...'

                                // Generate HTML coverage if file exists
                                bat """
                                if exist coverage.out (
                                    go tool cover -html=coverage.out -o reports\\coverage.html
                                ) else (
                                    echo "coverage.out not found, skipping HTML report"
                                )
                                """
                            }
                        }
                    }
                    post {
                        always {
                            // Publish backend coverage HTML
                            publishHTML([
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: true
                            ])
                        }
                    }
                }

                stage('Unit Tests - Frontend') {
                    steps {
                        dir('bugtracker-frontend') {
                            echo "Checking Node version..."
                            bat 'node -v'
                            bat 'npm -v'

                            // Install dependencies
                            bat 'npm ci'

                            // Run frontend tests
                            bat 'npm test'

                            // Create reports folder and move coverage HTML
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage reports\\'
                        }
                    }
                    post {
                        always {
                            // Publish frontend coverage HTML
                            publishHTML([
                                reportDir: 'bugtracker-frontend/reports',
                                reportFiles: 'coverage/index.html',
                                reportName: 'Frontend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: true
                            ])
                        }
                    }
                }

            }
        }

        stage('Launch Application') {
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    dir('.') {
                        echo "Stopping old containers and freeing frontend port..."
                        // Stop and remove any old containers to prevent port conflicts
                        bat 'docker-compose down -v --remove-orphans'

                        // Free FRONTEND_PORT manually if still occupied
                        bat """
                        for /f "tokens=5" %%a in ('netstat -ano ^| findstr :${env.FRONTEND_PORT} ^| findstr LISTENING') do (
                            echo Port ${env.FRONTEND_PORT} occupied by PID %%a, killing process...
                            taskkill /PID %%a /F
                        )
                        """

                        echo "Starting Docker containers..."
                        bat 'docker-compose up -d'

                        echo "List running containers..."
                        bat 'docker ps'
                    }
                }
            }
        }

    }

    post {
        always {
            echo "Cleaning workspace..."
            cleanWs()
        }
    }
}
