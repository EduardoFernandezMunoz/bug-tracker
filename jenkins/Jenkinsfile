pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            steps {
                script {
                    // Mount the current workspace into the Docker container
                    docker.image('snakee/golang-junit:1.21').inside("-v ${pwd()}:/workspace") {
                        // Run Go tests inside the container
                        sh 'cd /workspace/bugtracker-backend && go test -v ./...'
                    }
                }
            }
        }
    }
}
