pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Prepare Environment') {
            steps {
                echo 'Creating reports directories if missing...'
                bat """
                if not exist bugtracker-backend\\reports mkdir bugtracker-backend\\reports
                if not exist bugtracker-frontend\\reports mkdir bugtracker-frontend\\reports
                """
            }
        }

        stage('Free Port 8082') {
            steps {
                echo 'Freeing port 8082 if occupied...'
                bat """
                for /F "tokens=5" %a in ('netstat -ano ^| findstr :8082 ^| findstr LISTENING') do (
                    echo Killing PID %a...
                    taskkill /PID %a /F 1>nul 2>&1
                )
                """
            }
        }

        stage('Unit Tests Backend') {
            steps {
                dir('bugtracker-backend') {
                    bat 'if not exist reports mkdir reports || exit 0'
                    bat 'npm ci'
                    bat 'npm test'
                }
            }
        }

        stage('Unit Tests Frontend') {
            steps {
                dir('bugtracker-frontend') {
                    bat 'if not exist reports mkdir reports || exit 0'
                    bat 'npm ci'
                    bat 'npm test'
                    bat 'move /Y coverage reports\\ || exit 0'
                }
            }
        }

        stage('Publish HTML Reports') {
            steps {
                publishHTML([
                    reportDir: 'bugtracker-backend/reports',
                    reportFiles: 'index.html',
                    reportName: 'Backend Coverage Report'
                ])
                publishHTML([
                    reportDir: 'bugtracker-frontend/reports',
                    reportFiles: 'index.html',
                    reportName: 'Frontend Coverage Report'
                ])
            }
        }

        stage('Launch Application') {
            steps {
                echo 'Launching application...'
                bat 'start bugtracker-backend\\start-backend.bat'  // aseg√∫rate de que tu script use el puerto 8082
                bat 'start bugtracker-frontend\\start-frontend.bat'
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            cleanWs()
        }
    }
}
