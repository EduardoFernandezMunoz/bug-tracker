pipeline {
    agent any

    tools {
        go 'Go'                // Exact name of Go in Jenkins Global Tool Config
        nodejs 'NodeJS_LTS'    // Exact name of NodeJS in Jenkins Global Tool Config
    }

    stages {
        stage('Execute Unit Tests') {
            parallel {

                stage('Unit Tests - Backend') {
                    steps {
                        dir('bugtracker-backend') {
                            bat 'go version'

                            // Run tests and generate coverage
                            bat 'go test -v ./... > test-results.txt'
                            bat 'go test -coverprofile=coverage.out -covermode=atomic ./...'
                            bat 'go tool cover -html=coverage.out -o coverage.html'

                            // Create reports folder and move coverage
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage.html reports\\'

                            // Convert test-results.txt to JUnit XML
                            bat 'go-junit-report < test-results.txt > test-results.xml'
                        }
                    }
                    post {
                        always {
                            junit 'bugtracker-backend/test-results.xml'
                            publishHTML([
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true
                            ])
                        }
                    }
                }

                stage('Unit Tests - Frontend') {
                    steps {
                        dir('bugtracker-frontend') {
                            bat 'node -v'
                            bat 'npm -v'

                            // Install dependencies and run tests
                            bat 'npm ci'
                            bat 'npm test'

                            // Create reports folder and move coverage
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage reports\\'
                        }
                    }
                    post {
                        always {
                            junit 'bugtracker-frontend/reports/junit.xml'
                            publishHTML([
                                reportDir: 'bugtracker-frontend/reports',
                                reportFiles: 'index.html',
                                reportName: 'Frontend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true
                            ])
                        }
                    }
                }

            } // end parallel
        }

        stage('Launch Applications') {
            steps {
                echo "Launching backend and frontend apps with Docker..."
                bat 'docker-compose up --build -d'
            }
        }

        stage('API Tests') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.50.0-jammy'
                    reuseNode true
                }
            }
            steps {
                dir('tests-api') {
                    // Wait until API is ready (max 30s)
                    // Use host.docker.internal on Windows to reach backend
                    bat 'npx wait-port http://host.docker.internal:8080/api/health -t 30000'

                    // Install dependencies and run Playwright tests
                    bat 'npm ci'
                    bat 'npx playwright test'
                }
            }
            post {
                always {
                    // Publish JUnit test results
                    junit 'tests-api/test-results/results.xml'

                    // Publish Playwright HTML report
                    publishHTML target: [
                        reportDir: 'tests-api/playwright-report',
                        reportFiles: 'index.html',
                        reportName: 'Playwright API Test Report'
                    ]
                }
            }
        }

    } // end stages

    post {
        always {
            echo "Cleaning up workspace and Docker containers..."
            cleanWs()
            bat 'docker-compose down'
        }
    }
}
