pipeline {
    agent any
    tools {
        go 'Go'
        nodejs 'NodeJS_LTS'
    }

    stages {
        stage('Execute Unit Tests') {
            parallel {

                stage('Unit Tests - Backend') {
                    steps {
                        dir('bugtracker-backend') {
                            bat 'go version'

                            // Liberar puerto 8081 si está ocupado
                            echo 'Comprobando si el puerto 8081 está en uso...'
                            bat '''
                            for /f "tokens=5" %%a in ('netstat -ano ^| findstr :8081 ^| findstr LISTENING') do (
                                echo Puerto 8081 ocupado por PID %%a, matando proceso...
                                taskkill /PID %%a /F
                            )
                            '''

                            bat 'if not exist reports mkdir reports'

                            catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                                // Tests y coverage
                                bat 'go test -coverprofile=coverage.out -covermode=atomic ./...'
                                bat '''
                                if exist coverage.out (
                                    go tool cover -html=coverage.out -o reports\\coverage.html
                                ) else (
                                    echo "coverage.out no existe, omitiendo HTML"
                                )
                                '''
                                // JUnit XML
                                bat '''
                                go test -v ./... -json > test-results.json
                                go-junit-report < test-results.json > reports/backend-tests.xml
                                '''
                            }
                        }
                    }
                    post {
                        always {
                            publishHTML([
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: true
                            ])
                            publishJUnit('bugtracker-backend/reports/backend-tests.xml')
                        }
                    }
                }

                stage('Unit Tests - Frontend') {
                    steps {
                        dir('bugtracker-frontend') {
                            bat 'node -v'
                            bat 'npm -v'
                            bat 'npm ci'
                            bat 'npm test'
                            bat 'if not exist reports mkdir reports'
                            bat 'if exist coverage move /Y coverage reports\\'
                        }
                    }
                    post {
                        always {
                            publishHTML([
                                reportDir: 'bugtracker-frontend/reports',
                                reportFiles: 'coverage/index.html',
                                reportName: 'Frontend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: true
                            ])
                        }
                    }
                }

            }
        }

        stage('Launch Application') {
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    dir('.') {
                        bat 'docker-compose up -d'
                        bat 'docker ps'
                    }
                }
            }
        }

    }

    post {
        always {
            cleanWs()
        }
    }
}
