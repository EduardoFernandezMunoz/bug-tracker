pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Unit Tests - Backend') {
            steps {
                script {
                    // Run Go tests inside Linux container
                    docker.image('golang:1.21').inside(
                        '-v /c/ProgramData/Jenkins/.jenkins/workspace/Bugtracker:/workspace -w /workspace'
                    ) {
                        sh 'go test -v ./...'
                    }
                }
            }
        }
    }
}
