pipeline {
    agent any
    tools {
        go 'Go'           // Exact name of Go installation in Jenkins
        nodejs 'NodeJS_LTS' // Exact name of NodeJS installation in Jenkins
    }

    stages {
        stage('Execute Unit Tests') {
            parallel {

                stage('Unit Tests - Backend') {
                    steps {
                        dir('bugtracker-backend') {
                            // Verify that Go is available
                            bat 'go version'

                            // Run tests and generate coverage
                            bat 'go test -v ./... > test-results.txt'
                            bat 'go test -coverprofile=coverage.out -covermode=atomic ./...'
                            bat 'go tool cover -html=coverage.out -o coverage.html'

                            // Create reports folder and move coverage.html there
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage.html reports\\'
                        }
                    }
                    post {
                        always {
                            // Publish HTML report for backend coverage
                            publishHTML([
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: false
                            ])
                        }
                    }
                }

                stage('Unit Tests - Frontend') {
                    steps {
                        dir('bugtracker-frontend') {
                            // Verify that Node and npm are available
                            bat 'node -v'
                            bat 'npm -v'

                            // Install dependencies and run tests
                            bat 'npm ci'
                            bat 'npm test'

                            // Create reports folder and move coverage there
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage reports\\'
                        }
                    }
                    post {
                        always {
                            // Publish HTML report for frontend coverage
                            publishHTML([
                                reportDir: 'bugtracker-frontend/reports',
                                reportFiles: 'coverage/index.html',
                                reportName: 'Frontend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: false
                            ])
                        }
                    }
                }

            } // end parallel
        }
    }

    post {
        always {
            // Clean workspace at the end
            cleanWs()
        }
    }
}
