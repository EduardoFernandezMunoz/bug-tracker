pipeline {
    agent any

    tools {
        go 'Go'
        nodejs 'NodeJS_LTS'
    }

    stages {
        stage('Unit Tests - Backend') {
            steps {
                dir('bugtracker-backend') {
                    // Print Go version
                    bat 'go version'
                    // Run Go tests
                    bat 'go test ./... -v'
                }
            }
        }

        stage('Unit Tests - Frontend') {
            steps {
                dir('bugtracker-frontend') {
                    bat 'node -v'
                    bat 'npm ci'
                    bat 'npm test'
                }
            }
        }
    }
}
