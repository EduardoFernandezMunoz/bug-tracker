pipeline {
    agent any
    tools {
        go 'Go 1.21'       // Ajusta al nombre que pusiste en Jenkins Global Tool Config
        nodejs 'NodeJS 20' // Ajusta al nombre que pusiste en Jenkins Global Tool Config
    }

    stages {
        stage('Execute Unit Tests') {
            parallel {

                stage('Unit Tests - Backend') {
                    steps {
                        dir('bugtracker-backend') {
                            // Verificar que Go funciona
                            bat 'go version'

                            // Ejecutar tests y generar coverage
                            bat 'go test -v ./... > test-results.txt'
                            bat 'go test -coverprofile=coverage.out -covermode=atomic ./...'
                            bat 'go tool cover -html=coverage.out -o coverage.html'

                            // Crear carpeta de reportes y mover coverage.html
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage.html reports\\'
                        }
                    }
                    post {
                        always {
                            // Publicar reporte HTML del backend
                            publishHTML([
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: false
                            ])
                        }
                    }
                }

                stage('Unit Tests - Frontend') {
                    steps {
                        dir('bugtracker-frontend') {
                            // Verificar que Node funciona
                            bat 'node -v'
                            bat 'npm -v'

                            // Instalar dependencias y ejecutar tests
                            bat 'npm ci'
                            bat 'npm test'

                            // Crear carpeta de reportes y mover coverage
                            bat 'if not exist reports mkdir reports'
                            bat 'move /Y coverage reports\\'
                        }
                    }
                    post {
                        always {
                            // Publicar reporte HTML del frontend
                            publishHTML([
                                reportDir: 'bugtracker-frontend/reports',
                                reportFiles: 'coverage/index.html',
                                reportName: 'Frontend Coverage Report',
                                keepAll: true,
                                alwaysLinkToLastBuild: true,
                                allowMissing: false
                            ])
                        }
                    }
                }

            } // end parallel
        }
    }

    post {
        always {
            // Limpia workspace al final
            cleanWs()
        }
    }
}
