pipeline {
    agent any

    environment {
        WORKSPACE_LINUX = "/workspace"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Unit Tests - Backend') {
            steps {
                script {
                    // Run Go unit tests inside Linux container
                    docker.image('golang:1.21').inside(
                        "-v /c/ProgramData/Jenkins/.jenkins/workspace/Bugtracker:${WORKSPACE_LINUX} -w ${WORKSPACE_LINUX}"
                    ) {
                        sh '''
                        echo "Running backend unit tests inside Docker Linux container..."
                        go version
                        go test -v ./...
                        '''
                    }
                }
            }
        }
    }
}
