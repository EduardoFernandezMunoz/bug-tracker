pipeline {
    agent any

    environment {
        GO_HOME = 'C:\\Go'
        NODE_HOME = 'C:\\Program Files\\nodejs'
        PATH = "${env.GO_HOME}\\bin;${env.NODE_HOME};${env.PATH}"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Tool Check') {
            steps {
                echo "Checking Go version..."
                bat 'go version'
                echo "Checking Node version..."
                bat 'node -v'
                bat 'npm -v'
            }
        }

        stage('Prepare Environment') {
            steps {
                echo "Creating reports directories if missing..."
                bat 'if not exist bugtracker-backend\\reports mkdir bugtracker-backend\\reports || exit 0'
                bat 'if not exist bugtracker-frontend\\reports mkdir bugtracker-frontend\\reports || exit 0'

                echo "Freeing port 8081 if occupied..."
                bat '''
                for /F "tokens=5" %%a in ('netstat -ano ^| findstr :8081 ^| findstr LISTENING') do (
                    echo Port 8081 occupied by PID %%a, killing process...
                    taskkill /PID %%a /F || exit 0
                )
                '''
            }
        }

        stage('Execute Unit Tests') {
            parallel {
                stage('Unit Tests - Backend') {
                    steps {
                        dir('bugtracker-backend') {
                            echo "Running backend tests..."
                            // Ejecuta tests de Go, pero ignora fallos para que pipeline siga
                            bat 'go test ./... -v || exit 0'
                        }
                        publishHTML([allowMissing: true,
                                     alwaysLinkToLastBuild: true,
                                     keepAll: true,
                                     reportDir: 'bugtracker-backend/reports',
                                     reportFiles: 'index.html',
                                     reportName: 'Backend Coverage Report'])
                    }
                }
                stage('Unit Tests - Frontend') {
                    steps {
                        dir('bugtracker-frontend') {
                            echo "Installing dependencies..."
                            bat 'npm ci'
                            echo "Running frontend tests..."
                            bat 'npm test || exit 0'
                            echo "Moving coverage to reports..."
                            bat 'move /Y coverage reports\\ || exit 0'
                        }
                        publishHTML([allowMissing: true,
                                     alwaysLinkToLastBuild: true,
                                     keepAll: true,
                                     reportDir: 'bugtracker-frontend/reports',
                                     reportFiles: 'index.html',
                                     reportName: 'Frontend Coverage Report'])
                    }
                }
            }
        }

        stage('Launch Application') {
            steps {
                echo "Launching application..."
                dir('bugtracker-backend') {
                    bat 'go run main.go || exit 0'
                }
                dir('bugtracker-frontend') {
                    bat 'npm start || exit 0'
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning workspace..."
            cleanWs()
        }
    }
}
