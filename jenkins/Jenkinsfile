pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Unit Tests - Backend') {
            steps {
                script {
                    // Convert Windows path to Linux style for Docker
                    def workspaceLinux = '/workspace'

                    docker.image('golang:1.21').inside("-v ${env.WORKSPACE.replaceAll('\\\\','/')}:${workspaceLinux} -w ${workspaceLinux}") {
                        sh '''
                        echo "Running Go tests inside Docker container..."
                        go version
                        go test -v ./...
                        '''
                    }
                }
            }
        }
    }
}

